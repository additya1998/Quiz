<h1> All Questions </h1>
<br /> <br />
<form action="/admin/updateQuestion" method="post">
<table style="margin-left: 50px; width: 95%" class="table">
	<tr style="text-align: center">
		<th style="text-align: center"> Question </th>
		<th style="text-align: center"> First Option </th>
		<th style="text-align: center"> Second Option </th>
		<th style="text-align: center"> Third Option </th>
		<th style="text-align: center"> Fourth Option </th>
		<th style="text-align: center"> Answer </th>
		<th style="text-align: center"> Category </th>
		<th style="text-align: center"> Sub-Category </th>
		<th style="text-align: center"> Type </th>
		<th style="text-align: center"> </th>
		<th style="text-align: center"> </th>
	</tr>
	<% @questions.each do |question| %>
		<tr>
			<td style="text-align: center"> <%= Nokogiri::HTML.parse(question.question).text %> </td>
			<td style="text-align: center"> <%= Nokogiri::HTML.parse(question.firstOption).text %> </td>
			<td style="text-align: center"> <%= Nokogiri::HTML.parse(question.secondOption).text %> </td>
			<td style="text-align: center"> <%= Nokogiri::HTML.parse(question.thirdOption).text %> </td>
			<td style="text-align: center"> <%= Nokogiri::HTML.parse(question.fourthOption).text %> </td>
			<td style="text-align: center"> <%= Nokogiri::HTML.parse(question.answer).text %> </td>
			<td style="text-align: center"> <%= question.category %> </td>
			<td style="text-align: center"> <%= question.subCategory %> </td>
			<td>
				<% if question.typeOfQuestion.to_i == 1 %>
					Single correct
				<% elsif question.typeOfQuestion.to_i == 2 %>
					Multi correct
				<% elsif question.typeOfQuestion.to_i == 3 %>
					Identify the image
				<% elsif question.typeOfQuestion.to_i == 3 %>
					Identify the audo clip
				<% end %>
			<td>
			<td style="text-align: center"> <button type="submit" name="question_to_edit" value="<%= question.id %>"> Edit </button> </td>
			<td style="text-align: center"> <button type="submit" name="question_to_delete" value="<%= question.id %>"> Delete </button> </td>
		</tr>
	<%end %>
</table>
</form>

<%= render 'layouts/admin' %>
