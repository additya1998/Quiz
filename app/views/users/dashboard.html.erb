<br /> <br />
<h1> Start a Quiz! </h1>
<br /> <br /><br /> <br />
<form action="/play" method="post">
<table style="margin-left: 250px; width: 75%" class="table">
	<tr>
		<th> Category </th>
		<th> Sub-Category </th>
		<th> Current Score </th>
		<th> Highest Score </th>
        <th></th>
        <th></th>
	</tr>    
	<% $index = 0 %>
	<% begin %>
		<% @games[$index].each do |game| %>
		<tr>
			<td> <%= game[0] %> </td>
			<td> <%= game[1] %> </td>
			<td> <%= game[3] %> </td>
			<td> <%= game[4] %> </td>
			<td> <button type="submit" name="new_game" value="<%= game[0] %>; <%= game[1] %>" > New Game </button> </td>
			<% if game[3] == 0 %>
			<td> <button type="submit" name="continue_game" value="<%= game[0] %>; <%= game[1] %>" disabled> Continue Game </button> </td>
			<% elsif %>
			<td> <button type="submit" name="continue_game" value="<%= game[0] %>; <%= game[1] %>" > Continue Game </button> </td>
			<% end %>
		</tr>
	<% end %>
	<% $index = $index + 1 %>
	<% end while $index < 2 %>
</table>

